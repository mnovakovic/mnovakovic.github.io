    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "Jekyll start-server with drafts",
            "name": "Start Jekyll (drafts)",
            "url": "http://127.0.0.1:4000/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "Jekyll start-server no drafts",
            "name": "Start Jekyll",
            "url": "http://127.0.0.1:4000/",
            "webRoot": "${workspaceFolder}"
        }
    ]
}